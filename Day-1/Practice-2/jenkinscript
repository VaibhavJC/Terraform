pipeline {
    agent any

    stages { //stages start here
        stage('git checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/VaibhavJC/Terraform.git'
            }
        }
        stage('terraform init'){
            steps{
               sh'terraform init -reconfigure'
            }
        }        
        stage('terraform plan'){
            steps{
                 sh'terraform plan'
            }
        }
        stage('terraform apply'){
            steps{
                sh'terraform apply -auto-approve'
            }
        }
    }//stages end here
}
