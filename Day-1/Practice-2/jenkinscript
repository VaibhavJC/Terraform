pipeline {
    agent any

    stages { //stages start here
        stage('git checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/VaibhavJC/Terraform.git'
            }
        }
        stage('terraform init'){
            steps{
               dir('Day-1/Practice-2'){
                    sh'terraform init -reconfigure'
               }
            }
        }        
        stage('terraform plan'){
            steps{
                 dir('Day-1/Practice-2'){
                    sh'terraform plan'
                 }
            }
        }
        stage('terraform apply'){
            steps{
                dir('Day-1/Practice-2'){
                    sh'terraform apply -auto-approve'
                }
            }
        }
    }//stages end here
}
